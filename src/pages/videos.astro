---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Vidéos"
---
<BaseLayout pageTitle={pageTitle}>
  <div class="video">
    <img src="img/videos/hors-les-murs.jpg" alt="Capture d'écran de la vidéo Hors les Murs" class="image">
    <p>Hors les murs, 2020</p>
  </div>
  <div class="video">
    <img src="img/performances/ionf.jpg" alt="Capture d'écran de la performance sur Ionf" class="image">
    <p>Fanclip de Lapsuceur - Ionf, soirée Glam Confinée, 2020</p>
  </div>
