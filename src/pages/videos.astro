    <p>Vous les femmes, 2018</p>
  </div>
</BaseLayout>


<style>
  .video{
    margin-bottom: 2em;
  }

  .image{
    width: 100%;
    margin-bottom: 0.5em;
  }

  #lateral-gauche{
    width: 30%;
  }

  .horizontal{
    display: flex;
    align-items: center;
    gap: 2em;
  }
</style>
